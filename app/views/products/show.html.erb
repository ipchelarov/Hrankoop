<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Picture:</b>
  <% if @product.picture? %>
    <%= image_tag(@product.picture.url, :size => "160x120") %> <br />
    <%= @product.picture %>
  <% end %>
</p>

<p>
  <b>Farm:</b>
  <%= link_to @product.farm.name, farm_path(@product.farm) %>
</p>

<p>
  <b>Season:</b>
  <%= @product.season %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Order', order_product_path(@product) %> |
<%= link_to 'All', products_path %>
