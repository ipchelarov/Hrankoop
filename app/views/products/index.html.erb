<h1>Listing products</h1>

<% if notice %><p id="warning"><%= notice %></p> <% end %>

<table>
  <tr align="left">
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th>Farm</th>
    <th>Season</th>
    <th colspan="4"> Actions</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= image_tag(product.picture.url, :size => "160x120") unless product.picture.nil? %></td>
    <td><%= link_to product.farm.name, farm_path(product.farm) %></td>
    <td><%= product.season %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Order', order_product_path(product.id) %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
