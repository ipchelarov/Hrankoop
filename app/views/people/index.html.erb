<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Picture</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= image_tag(person.picture.url, :size => "160x120") unless person.picture.nil? %></td>
    <td><%= person.email %></td>
    <td><%= person.phone %></td>
    <td><%= person.address %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

